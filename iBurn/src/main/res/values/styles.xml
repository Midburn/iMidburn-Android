<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="Theme.Iburn.Base" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/iburn_color</item>
        <item name="colorPrimaryDark">@color/iburn_color_dark</item>
        <item name="colorAccent">@color/iburn_color_accent</item>
    </style>

    <style name="Theme.Iburn.Dialog" parent="Theme.AppCompat.Dialog">
        <item name="colorAccent">@color/iburn_color_accent</item>
    </style>

    <!-- MainActivity theme -->
    <style name="Theme.Iburn" parent="Theme.Iburn.Base">
    </style>

    <style name="ActionBar.Transparent.Iburn" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@color/ab_bg</item>
    </style>

    <style name="PlayaTextItem">
        <item name="android:textColor">@color/regular_text</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="PlayaListViewHeaderItem">
        <item name="android:textColor">@color/sub_tab_text</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/sub_pager_tab_bg</item>
    </style>

    <style name="PlayaListViewSubHeaderItem">
        <item name="android:textColor">@color/sub_tab_text</item>
        <item name="android:textSize">10sp</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/sub_header_bg</item>
    </style>

    <style name="Subdued">
        <item name="android:textColor">@color/sub_sub_text</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="GreenText">
        <item name="android:textColor">@color/green_text</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="OrangeText">
        <item name="android:textColor">@color/orange_text</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!-- Pre Lollipop the FAB provides its own padding -->
    <style name="FloatingActionButton">
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>
    </style>

    <!-- Welcome -->
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">?attr/colorPrimary</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="WelcomeHeadingAppearance" parent="@android:style/TextAppearance.Large">
        <item name="android:textSize">@dimen/welcome_heading</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="WelcomeContentAppearance" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/welcome_content</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>
